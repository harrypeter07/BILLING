{
  "name": "billing-solutions",
  "version": "0.1.0",
  "description": "Smart Billing for Small Businesses - Manage products, create GST invoices, track customers, and generate reports",
  "author": "Billing Solutions",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 ; cross-env NODE_ENV=development electron .",
    "build": "next build",
    "build:export": "node scripts/prepare-electron-build.js ; cross-env ELECTRON_BUILD=true next build ; node scripts/restore-api-routes.js",
    "start": "next start",
    "lint": "eslint .",
    "seed:license": "node scripts/seed-license.js",
    "dist": "node scripts/clear-electron-cache.js ; npm run build:export ; cross-env CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_LINK= electron-builder",
    "dist:win": "node scripts/build-electron-win.js",
    "dist:mac": "node scripts/clear-electron-cache.js ; npm run build:export ; cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "dist:linux": "node scripts/clear-electron-cache.js ; npm run build:export ; cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
